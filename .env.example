## Your Groq API Key
GROQ_API_KEY = "your_groq_api_key_here"

# Browser Configuration
MAX_BROWSERS=5
HEADLESS=true
BROWSER_TIMEOUT=30000

# LLM Configuration
LLM_MODEL="your-visioni-model"
LLM_TEMPERATURE=0.1

# Execution Configuration
DEFAULT_TASK_TIMEOUT=300
DEFAULT_RETRY_COUNT=3
INTELLIGENCE_RATIO=0.3

# Paths
SCREENSHOT_DIR=./screenshots
LOG_DIR=./logs

ENABLE_DYNAMIC_AGENT=true
MAX_AGENT_STEPS=50
AGENT_HISTORY_LENGTH=5

ENABLE_SELF_CORRECTION=true
MAX_CORRECTION_ATTEMPTS=2

VISION_MODEL="your-visioni-model"
VISION_ENABLED=false
ENABLE_VISION_FALLBACK=true
VISION_CACHE_ENABLED=true
VISION_MAX_MARKERS=50

ENABLE_PERSISTENT_CONTEXT=false
STORAGE_STATE_PATH=./storage_state.json


# CORS - comma-separated list of allowed origins
# Default: "*" (allows all - not recommended for production)
ALLOWED_ORIGINS=*
# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60
# Prompt Security
ENABLE_PROMPT_SANITIZATION=true
MAX_PROMPT_LENGTH=5000
